@model Portal.Pages.DbAssessment._AssignTaskModel

<div class="panel panel-default" id="@("assignTask" + Model.AssignTaskId)">
    <div class="panel-heading">
        <span>Assign Task @Model.AssignTaskId</span>
    </div>
    <div class="panel-body">
        <div class="col-lg-12">
            <div class="col-xs-3">
                @Html.LabelFor(model => model.Assessor)
                <div class="pull-right">
                    @Html.DropDownListFor(model => model.Assessor, Model.Assessors, new { @class = "form-control", style = "width:200px;" })
                </div>
            </div>
            <div class="col-xs-3">
                @Html.LabelFor(model => model.SourceType)
                <div class="pull-right">
                    @Html.DropDownListFor(model => model.SourceType, Model.SourceTypes, new { @class = "form-control", style = "width:200px;" })
                </div>
            </div>
            <div class="col-xs-3">
                @Html.LabelFor(model => model.WorkspaceAffected)
                <div class="pull-right">
                    @Html.TextBoxFor(model => model.WorkspaceAffected, new { @class = "form-control", style = "width:180px;" })
                </div>
            </div>
        </div>
        <br />
        <div class="col-lg-12" style="padding-top: 10px;">
            <div class="col-xs-3">
                @Html.LabelFor(model => model.Verifier)
                <div class="pull-right">
                    @Html.DropDownListFor(model => model.Verifier, Model.Verifiers, new { @class = "form-control", style = "width:200px;" })
                </div>
            </div>
        </div>

        <div class="col-lg-12" style="padding-top: 10px; padding-bottom: 10px;">
            @Html.LabelFor(model => model.Notes)
            @Html.TextAreaFor(model => model.Notes, htmlAttributes: new { style = "width:100%; max-width: 100%; height:120px;" })
        </div>
        <br />
    </div>
</div>
<br />


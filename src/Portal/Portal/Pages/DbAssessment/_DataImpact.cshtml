@model List<Portal.Pages.DbAssessment._DataImpactModel>

<div class="card mb-4">
    <h6>
        <span>Data Impact</span>
    </h6>
    <div class="col-12">
        <div class="card-body p-0">
            <div class="row justify-content-between">
                <div class="col-12">
                    <div class="form-row justify-content-start">
                        <div class="col-2"><label>Usage</label></div>
                        <div class="col-2"><label>Edited</label></div>
                        <div class="col-6"><label>Comments</label></div>
                    </div>
                </div>
                @foreach (var m in Model)
                {
                    <div class="col-12">
                        <div class="form-row justify-content-start">
                            <div class="col-2">@Html.DisplayTextFor(model=> m.Usage)</div>
                            <div class="col-2">
                                @Html.DropDownListFor(model => m.Edited, new List<SelectListItem>
                                {
                                    new SelectListItem("", "0"),
                                    new SelectListItem("Yes", "1"),
                                    new SelectListItem("No", "2")
                                },
                                    new { @class = "form-control" })
                            </div>
                            <div class="col-6">@Html.TextBoxFor(model => m.Comments, new { @class = "form-control" })</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

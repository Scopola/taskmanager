@model Portal.Pages.DbAssessment._RecordProductActionModel

<div class="card mb-4">
    <h6>
        <span>Record Product Action</span>
    </h6>
    <div class="col-12">
        <div class="card-body p-0">
            <div class="row justify-content-between">
                <div class="col-12">
                    <div class="form-row justify-content-start">
                        <div class="col-2">@Html.LabelFor(model => model.Action, new { @class = "col-form-label" })</div>
                        <div class="col-3">@Html.CheckBoxFor(model => model.Action, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-row align-items-center justify-content-start">
                        <div class="col-2">@Html.LabelFor(model => model.Change, new { @class = "col-form-label" })</div>
                        <div class="col-8">@Html.TextAreaFor(model => model.Change, new { @class = "form-control" })</div>
                    </div>
                    <div class="form-row align-items-center justify-content-start">
                        <div class="col-2">@Html.LabelFor(model => model.ImpactedProduct, new { @class = "col-form-label" })</div>
                        <div class="col-3">@Html.DropDownListFor(model => model.ImpactedProduct, Model.ImpactedProducts, new { @class = "form-control" })</div>
                        <div class="col-2">@Html.LabelFor(model => model.ProductActionType, new { @class = "col-form-label" })</div>
                        <div class="col-3">@Html.DropDownListFor(model => model.ProductActionType, Model.ProductActionTypes, new { @class = "form-control" })</div>
                        <div class="col-1"><i class="fa fa-times-circle" style="color: red"></i></div>
                    </div>
                    <div class="form-row align-items-center justify-content-start">
                        <div class="col-2">@Html.LabelFor(model => model.ImpactedProduct, new { @class = "col-form-label" })</div>
                        <div class="col-3">@Html.DropDownListFor(model => model.ImpactedProduct, Model.ImpactedProducts, new { @class = "form-control" })</div>
                        <div class="col-2">@Html.LabelFor(model => model.ProductActionType, new { @class = "col-form-label" })</div>
                        <div class="col-3">@Html.DropDownListFor(model => model.ProductActionType, Model.ProductActionTypes, new { @class = "form-control" })</div>
                        <div class="col-1"><i class="fa fa-times-circle" style="color: red"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
